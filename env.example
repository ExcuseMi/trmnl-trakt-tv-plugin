# ============================================================================
# IP WHITELIST CONFIGURATION
# ============================================================================

# Enable TRMNL IP whitelist protection (true/false)
ENABLE_IP_WHITELIST=true

# How often to refresh TRMNL IPs (hours)
IP_REFRESH_HOURS=24

# ============================================================================
# IMAGE API KEYS
# ============================================================================

# TMDB API key (required) — get one at https://www.themoviedb.org/settings/api
TMDB_API_KEY=your_tmdb_api_key_here

# Fanart.tv API key (optional fallback) — get one at https://fanart.tv/get-an-api-key/
FANART_API_KEY=

# ============================================================================
# REDIS / CACHE CONFIGURATION
# ============================================================================

# Redis connection URL
REDIS_URL=redis://redis:6379/0

# Cache TTL for successful image lookups (seconds, default 7 days)
CACHE_TTL_SECONDS=604800

# Cache TTL for not-found sentinels (seconds, default 1 day)
CACHE_TTL_NOT_FOUND_SECONDS=86400

# ============================================================================
# TMDB IMAGE SETTINGS
# ============================================================================

# TMDB poster size (w92, w154, w185, w342, w500, w780, original)
TMDB_IMAGE_SIZE=w185
